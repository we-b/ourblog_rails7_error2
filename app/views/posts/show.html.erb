<div class="postTitle">
  <%= @post.title %>
</div>
<div class="postDate">
  <%= @post.created_at %>
</div>
<div class="postAuthor">
</div>
<div class="postManage">
  <% if user_signed_in? && current_user.id == @post.user_id %>
    <%= link_to "編集", edit_post_path(@post.id), class: "postManage__edit" %>
    <%= link_to "削除", post_path(@post.id), data: { turbo_method: :delete }, class: "postManage__delete" %>
  <% end %>
</div>
<div class="postText">
  <%= simple_format @post.content %>
</div>